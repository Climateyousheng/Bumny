%C  This function is used to avoid problems with files called "/"
%C  when using %PATH/%FILE.
%TCL
proc file_build { name path file {ext_path PATH} {ext_file FILE} } {
  if { $path == ""  || $file == "" } {
    return "\'$name \',"
  } elseif { ($path == "EXTERNAL") || ($file == "EXTERNAL") } {
    set path $ext_path
    set file $ext_file
  }
  if { $file != "#NULL" } {
     return "\'$name $path/$file\',"
  } else { 
     return "\'$name $path\',"
  }
}
%ENDTCL
